{
  "manifest_version": 3,
  "name": "Zyph Folder Manager",
  "version": "1.0.0",
  "description": "Create and manage nested folders for organizing topics, customers, and projects",
  "permissions": [
    "storage",
    "sidePanel",
    "contextMenus",
    "activeTab",
    "notifications",
    "unlimitedStorage",
    "alarms"
  ],
  "host_permissions": [
    "https://euabvloqnbuxffrwmljk.supabase.co/*"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Open Zyph Folder Manager"
  },
  "side_panel": {
    "default_path": "sidepanel/sidepanel.html"
  },
  "background": {
    "service_worker": "background/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["prompts/*", "dialog/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
