# Environment
ENVIRONMENT=development
API_V1_STR=/api/v1

# Database
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/synapse_db

# Security
SECRET_KEY=your-secret-key-here
ACCESS_TOKEN_EXPIRE_MINUTES=30

# External APIs
OPENAI_API_KEY=your-openai-api-key
LOVABLE_API_KEY=your-lovable-api-key
PDF_API_KEY=your-pdf-api-key

# Storage Backend Options:
# - supabase: Use native Supabase storage
# - s3: Use AWS S3 or S3-compatible storage (like Supabase S3)
# - local: Use local file system

# Option 1: Native Supabase Storage
# STORAGE_BACKEND=supabase
# SUPABASE_URL=your-supabase-url
# SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key
# SUPABASE_STORAGE_BUCKET=synapse-storage

# Option 2: Supabase S3-compatible Storage (Recommended)
STORAGE_BACKEND=s3
AWS_ACCESS_KEY_ID=your-supabase-s3-access-key
AWS_SECRET_ACCESS_KEY=your-supabase-s3-secret-key
AWS_S3_BUCKET=synapse-storage
AWS_S3_REGION=ap-south-1
AWS_S3_ENDPOINT_URL=https://your-project.storage.supabase.co/storage/v1/s3

# Option 3: Standard AWS S3
# STORAGE_BACKEND=s3
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_S3_BUCKET=your-s3-bucket
# AWS_S3_REGION=us-west-2
# AWS_S3_ENDPOINT_URL=  # Leave empty for standard AWS S3

# Processing settings
MAX_CONTENT_SIZE_MB=50
CHUNK_SIZE=6000
CHUNK_OVERLAP=200
SIMILARITY_THRESHOLD=0.7
EMBEDDING_MODEL=text-embedding-ada-002

# Chat settings
CHAT_MODEL=google/gemini-2.5-flash
MAX_CHAT_HISTORY=10
CHAT_TIMEOUT_SECONDS=30

# Rate limiting
RATE_LIMIT_PER_MINUTE=60

# Logging
LOG_LEVEL=INFO

# Redis (optional, for caching and background tasks)
REDIS_URL=redis://localhost:6379/0
ENABLE_CACHING=true
CACHE_TTL_SECONDS=3600