{
  "manifest_version": 3,
  "name": "Synapse - LLM Context Manager",
  "version": "0.1.0",
  "description": "Capture, summarize, and share conversation context across different LLM platforms",

  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],

  "host_permissions": [
    "https://chat.openai.com/*",
    "https://chatgpt.com/*",
    "https://gemini.google.com/*",
    "https://claude.ai/*"
  ],

  "background": {
    "service_worker": "background/service-worker.js"
  },

  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*",
        "https://gemini.google.com/*",
        "https://claude.ai/*"
      ],
      "js": [
        "utils/storage-manager.js",
        "content/platform-parsers/chatgpt.js",
        "content/platform-parsers/gemini.js",
        "content/platform-parsers/claude.js",
        "content/conversation-detector.js",
        "content/context-injector.js",
        "content/folder-selector.js"
      ],
      "run_at": "document_idle"
    }
  ],

  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Synapse Settings"
  },

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "web_accessible_resources": [
    {
      "resources": [
        "content/*",
        "popup/folderManager.js",
        "popup/dataViewer.js"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}